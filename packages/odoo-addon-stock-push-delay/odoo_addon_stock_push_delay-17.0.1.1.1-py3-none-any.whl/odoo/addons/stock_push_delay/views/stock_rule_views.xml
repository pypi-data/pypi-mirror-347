<odoo>

    <record id="view_stock_rule_form" model="ir.ui.view">
        <field name="name">stock.rule.form - location_dest_from_rule</field>
        <field name="model">stock.rule</field>
        <field name="inherit_id" ref="stock.view_stock_rule_form" />
        <field name="arch" type="xml">
            <field name="location_dest_id" position="after">
                <field
                    name="location_dest_from_rule"
                    invisible="action not in ['pull', 'pull_push']"
                    groups="base.group_no_one"
                />
            </field>
        </field>
    </record>

</odoo>
