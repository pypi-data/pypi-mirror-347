<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30" />
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@name='default_taxes_setting_container']"
                position="after"
            >
                <h2>Ecosoft e-Tax Services</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="frappe_server_url">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Frappe Server URL</span>
                            <span class="text-muted">
                                <field name="frappe_server_url" />
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="frappe_auth_token">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Frappe Auth Token</span>
                            <span class="text-muted">
                                <field name="frappe_auth_token" />
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_send_etax_email" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_send_etax_email" string="Send Email" />
                            <div class="text-muted">
                                Allow to send an email to partner after sign etax.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Replacement Lock Date</span>
                            <span class="text-muted">
                                <field name="replacement_lock_date" />
                            </span>
                            <div class="text-muted">
                                e-Tax Replacement not allowed after this date of next invoice month<br
                                />
                                For example, if replace lock date is 10 and invoice date is 20/11/2000, replacement e-Tax is not allowed after 10/12/2000.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
