<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="survey_form" model="ir.ui.view">
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form" />
        <field name="arch" type="xml">
            <group name="participants" position="inside">
                <field name="legal_terms" />
                <field name="legal_terms_link" invisible="not legal_terms" />
                <field name="legal_terms_text" invisible="not legal_terms" />
            </group>
        </field>
    </record>
</odoo>
