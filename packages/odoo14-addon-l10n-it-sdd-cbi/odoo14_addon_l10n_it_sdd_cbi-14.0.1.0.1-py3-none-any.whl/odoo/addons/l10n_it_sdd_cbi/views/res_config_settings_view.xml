<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_form_inherit_view" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.view</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="account_banking_sepa_direct_debit.view_account_config_settings"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//div/field[@name='sepa_creditor_identifier']/.."
                position="after"
            >
                <div class="row mt16">
                    <label
                        for="sepa_payment_order_schema"
                        class="col-md-3 o_light_label"
                    />
                    <field name="sepa_payment_order_schema" />
                </div>
            </xpath>
        </field>
    </record>

</odoo>
