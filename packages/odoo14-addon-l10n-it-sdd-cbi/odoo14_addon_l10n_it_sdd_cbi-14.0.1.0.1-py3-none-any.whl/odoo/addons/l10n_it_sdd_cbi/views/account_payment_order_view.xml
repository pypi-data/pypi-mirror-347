<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="account_payment_order_form_inherit_view" model="ir.ui.view">
        <field name="name">account.payment.order.form.inherit.view</field>
        <field name="model">account.payment.order</field>
        <field
            name="inherit_id"
            ref="account_payment_order.account_payment_order_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='journal_id']" position="before">
                <field name="scheme" />
            </xpath>
        </field>
    </record>

    <record id="account_payment_order_tree_inherit_view" model="ir.ui.view">
        <field name="name">account.payment.order.tree.inherit.view</field>
        <field name="model">account.payment.order</field>
        <field
            name="inherit_id"
            ref="account_payment_order.account_payment_order_tree"
        />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='journal_id']" position="before">
                <field name="scheme" />
            </xpath>
        </field>
    </record>

</odoo>
